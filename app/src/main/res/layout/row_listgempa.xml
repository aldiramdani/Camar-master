<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/BottomHomeList"
    android:weightSum="5"
    android:orientation="horizontal"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="8dp"
            android:id="@+id/indicatorGempaList"

            android:src="@mipmap/ic_sr_ijolumut"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_magnitudoList"
            tools:text="4.3"
            android:textSize="24sp"
            android:textColor="@color/headTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="10sp"
            android:textColor="@color/headTextColor"
            android:text="Magnitudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout

        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        android:layout_weight="4.6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="3dp"
                android:src="@mipmap/ic_depth"
                android:layout_width="14dp"
                android:layout_height="14dp" />

            <TextView
                android:id="@+id/txt_kedalamanGempaList"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#4c86f3"
                tools:text="6 Km" />
            <TextView
                android:id="@+id/txt_timeList"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#2d2d2d"
                tools:text="25/08/2018 19:58:04 WIB" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_weight="4.6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_indicatorTsunamiList"
                    android:src="@mipmap/ic_tsunami_green"
                    android:layout_width="14dp"
                    android:layout_height="14dp" />

                <TextView
                    android:id="@+id/txt_indicatorTsunamiList"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#2d2d2d"
                    android:text="Tidak Berpotensi Tsunami" />

            </LinearLayout>
            <TextView
                android:id="@+id/txt_keteranganGempaList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#2d2d2d"
                tools:text="Pusat gempa berada di darat 16km tenggara Bengkulu Utara" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>